# =================================================================
# CONFIGURAÇÃO DE AMBIENTE DE TESTES
# =================================================================
# Valores otimizados para execução de testes automatizados
# =================================================================

# -------------------- CONFIGURAÇÕES GERAIS -----------------------
NEXT_PUBLIC_APP_NAME="Advancemais [TEST]"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="test@advancemais.com.br"

# -------------------- ENDPOINTS DA API ---------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=1000
NEXT_PUBLIC_API_VERSION="v1"

# -------------------- CONFIGURAÇÕES DE AUTENTICAÇÃO -------------
NEXT_PUBLIC_TOKEN_EXPIRATION=3600000
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=false
NEXT_PUBLIC_SESSION_STORAGE_KEY="advancemais:test:session"

# -------------------- CONFIGURAÇÕES DE INTERFACE -----------------
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS=false
NEXT_PUBLIC_PAGINATION_SIZE=10
NEXT_PUBLIC_MAX_UPLOAD_SIZE=1048576 # 1MB em bytes

# -------------------- CONFIGURAÇÕES DE PERFORMANCE ---------------
NEXT_PUBLIC_STALE_TIME=0
NEXT_PUBLIC_CACHE_TIME=0
NEXT_PUBLIC_REVALIDATE_TIME=0
NEXT_PUBLIC_IMAGE_OPTIMIZATION=false

# -------------------- FEATURE FLAGS ------------------------------
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_NOTIFICATION=true
NEXT_PUBLIC_FEATURE_CHAT=true

# -------------------- MONITORAMENTO E ANÁLISE -------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID="test-analytics"
NEXT_PUBLIC_ERROR_TRACKING=false
NEXT_PUBLIC_LOG_LEVEL="error"
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# -------------------- CONFIGURAÇÕES DE DESENVOLVIMENTO -----------
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=true
NEXT_PUBLIC_SHOW_DEPRECATION_WARNINGS=false

# -------------------- INTEGRAÇÕES -------------------------------
NEXT_PUBLIC_MAPS_API_KEY="test-maps-key"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="test-recaptcha-key"