# =================================================================
# CONFIGURAÇÃO DE AMBIENTE DE DESENVOLVIMENTO
# =================================================================
# Valores otimizados para desenvolvimento local
# =================================================================

# -------------------- CONFIGURAÇÕES GERAIS -----------------------
NEXT_PUBLIC_APP_NAME="Advancemais [DEV]"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="dev@advancemais.com.br"

# -------------------- ENDPOINTS DA API ---------------------------
NEXT_PUBLIC_API_URL=https://advancemais-api.onrender.com/api
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_VERSION="v1"

# -------------------- CONFIGURAÇÕES DE AUTENTICAÇÃO -------------
NEXT_PUBLIC_TOKEN_EXPIRATION=86400000 # 24 horas em dev
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=true
NEXT_PUBLIC_SESSION_STORAGE_KEY="advancemais:dev:session"

# -------------------- CONFIGURAÇÕES DE INTERFACE -----------------
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_PAGINATION_SIZE=10
NEXT_PUBLIC_MAX_UPLOAD_SIZE=10485760 # 10MB em bytes (maior em dev)

# -------------------- CONFIGURAÇÕES DE PERFORMANCE ---------------
NEXT_PUBLIC_STALE_TIME=0 # Sem cache em dev
NEXT_PUBLIC_CACHE_TIME=0 # Sem cache em dev
NEXT_PUBLIC_REVALIDATE_TIME=0 # Sem cache em dev
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# -------------------- FEATURE FLAGS ------------------------------
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_NOTIFICATION=true
NEXT_PUBLIC_FEATURE_CHAT=true # Habilitado em dev para testes

# -------------------- MONITORAMENTO E ANÁLISE -------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID="dev-analytics"
NEXT_PUBLIC_ERROR_TRACKING=true
NEXT_PUBLIC_LOG_LEVEL="debug" # Mais verboso em desenvolvimento
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# -------------------- CONFIGURAÇÕES DE DESENVOLVIMENTO -----------
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API=false # Configurar para true se quiser usar dados mockados
NEXT_PUBLIC_SHOW_DEPRECATION_WARNINGS=true

# -------------------- INTEGRAÇÕES -------------------------------
NEXT_PUBLIC_MAPS_API_KEY="dev-maps-key"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="dev-recaptcha-key"