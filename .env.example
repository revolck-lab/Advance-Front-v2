# =================================================================
# ARQUIVO MODELO PARA CONFIGURAÇÃO DE AMBIENTE
# =================================================================
# Este arquivo serve como documentação das variáveis necessárias
# Copie para .env.local e configure os valores para seu ambiente
# =================================================================

# -------------------- CONFIGURAÇÕES GERAIS -----------------------
# Informações básicas da aplicação
NEXT_PUBLIC_APP_NAME="Advancemais"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="suporte@advancemais.com.br"

# -------------------- ENDPOINTS DA API ---------------------------
# Configuração da API principal e timeout de requisições
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_VERSION="v1"

# -------------------- CONFIGURAÇÕES DE AUTENTICAÇÃO -------------
# Tempo de expiração do token JWT e configurações de refresh
NEXT_PUBLIC_TOKEN_EXPIRATION=3600000
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=true
NEXT_PUBLIC_SESSION_STORAGE_KEY="advancemais:session"

# -------------------- CONFIGURAÇÕES DE INTERFACE -----------------
# Tema padrão e comportamentos da UI
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_PAGINATION_SIZE=10
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880 # 5MB em bytes

# -------------------- CONFIGURAÇÕES DE PERFORMANCE ---------------
# Configurações de cache e otimização
NEXT_PUBLIC_STALE_TIME=60000 # 1 minuto
NEXT_PUBLIC_CACHE_TIME=300000 # 5 minutos
NEXT_PUBLIC_REVALIDATE_TIME=3600 # 1 hora
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# -------------------- FEATURE FLAGS ------------------------------
# Flags para habilitar/desabilitar recursos
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_NOTIFICATION=true
NEXT_PUBLIC_FEATURE_CHAT=false

# -------------------- MONITORAMENTO E ANÁLISE -------------------
# Configurações de analytics, logging e monitoramento
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=""
NEXT_PUBLIC_ERROR_TRACKING=false
NEXT_PUBLIC_LOG_LEVEL="error" # debug, info, warn, error
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# -------------------- CONFIGURAÇÕES DE DESENVOLVIMENTO -----------
# Configurações específicas para ambiente de desenvolvimento
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_DEPRECATION_WARNINGS=true

# -------------------- INTEGRAÇÕES -------------------------------
# Configurações para integrações de terceiros
NEXT_PUBLIC_MAPS_API_KEY=""
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=""