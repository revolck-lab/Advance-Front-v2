# =================================================================
# CONFIGURAÇÃO DE AMBIENTE DE HOMOLOGAÇÃO
# =================================================================
# Valores para ambiente de testes e QA
# =================================================================

# -------------------- CONFIGURAÇÕES GERAIS -----------------------
NEXT_PUBLIC_APP_NAME="Advancemais [STAGING]"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="suporte@advancemais.com.br"

# -------------------- ENDPOINTS DA API ---------------------------
NEXT_PUBLIC_API_URL=https://staging-api.advancemais.com.br/api
NEXT_PUBLIC_API_TIMEOUT=20000
NEXT_PUBLIC_API_VERSION="v1"

# -------------------- CONFIGURAÇÕES DE AUTENTICAÇÃO -------------
NEXT_PUBLIC_TOKEN_EXPIRATION=7200000 # 2 horas
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=true
NEXT_PUBLIC_SESSION_STORAGE_KEY="advancemais:staging:session"

# -------------------- CONFIGURAÇÕES DE INTERFACE -----------------
NEXT_PUBLIC_DEFAULT_THEME="light"
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_PAGINATION_SIZE=10
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880 # 5MB em bytes

# -------------------- CONFIGURAÇÕES DE PERFORMANCE ---------------
NEXT_PUBLIC_STALE_TIME=30000 # 30 segundos
NEXT_PUBLIC_CACHE_TIME=120000 # 2 minutos
NEXT_PUBLIC_REVALIDATE_TIME=900 # 15 minutos
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# -------------------- FEATURE FLAGS ------------------------------
NEXT_PUBLIC_FEATURE_DARK_MODE=true
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_NOTIFICATION=true
NEXT_PUBLIC_FEATURE_CHAT=true # Habilitado em staging para testes

# -------------------- MONITORAMENTO E ANÁLISE -------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ANALYTICS_ID="staging-analytics"
NEXT_PUBLIC_ERROR_TRACKING=true
NEXT_PUBLIC_LOG_LEVEL="info"
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# -------------------- CONFIGURAÇÕES DE DESENVOLVIMENTO -----------
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_DEPRECATION_WARNINGS=true

# -------------------- INTEGRAÇÕES -------------------------------
NEXT_PUBLIC_MAPS_API_KEY="staging-maps-key"
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="staging-recaptcha-key"